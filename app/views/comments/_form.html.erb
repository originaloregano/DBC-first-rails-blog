<!-- Rails is smart enough to know what form we are using this for: EDIT OR NEW -->
<%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name  %><br>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %><br>
    </p>

    <p>
      <%= f.submit  %>
    </p>
<% end %>